<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Date and Arrow Navigation -->
    <LinearLayout
        android:id="@+id/dateNavLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end">

        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="January 2, 2025"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary" />

        <ImageButton
            android:id="@+id/prevDayBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_left"
            android:background="@null"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="?attr/colorControlNormal"
            android:contentDescription="previous day"
            />

        <ImageButton
            android:id="@+id/nextDayBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_right"
            android:background="@null"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="?attr/colorControlNormal"
            android:contentDescription="next day"
            />
    </LinearLayout>

    <!-- Task List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dateNavLayout"
        android:layout_marginTop="16dp" />

    <!-- TODO: May need to delete - FAB visible only in this fragment -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        app:backgroundTint="@color/green_confirm"
        app:tint="@android:color/white"
        android:contentDescription="Add Task" />

    <!-- "Add Task" Overlay -->
    <include
        android:id="@+id/overlayNewTask"
        layout="@layout/overlay_new_task"
        android:visibility="gone" />
</RelativeLayout>
